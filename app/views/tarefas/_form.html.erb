<%= form_with(model: tarefa) do |form| %>
  <% if tarefa.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 mb-4 rounded">
      <h2 class="font-bold mb-2"><%= pluralize(tarefa.errors.count, "error") %> prohibited this tarefa from being saved:</h2>

      <ul>
        <% tarefa.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :titulo, class: "block font-bold" %>
    <%= form.text_field :titulo, class: "w-full border px-4 py-2 rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :descricao, class: "block font-bold" %>
    <%= form.text_area :descricao, class: "w-full border px-4 py-2 rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :categoria, class: "block font-bold" %>
    <%= form.text_field :categoria, class: "w-full border px-4 py-2 rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :data_vencimento, class: "block font-bold" %>
    <%= form.date_field :data_vencimento, class: "w-full border px-4 py-2 rounded" %>
  </div>

  <div>
    <%= form.submit "Enviar", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
