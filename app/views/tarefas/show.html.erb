<p class="text-green-500 mb-4"><%= notice %></p>

<%= render @tarefa %>

<div class="mt-4">
  <%= link_to "Editar essa Tarefa", edit_tarefa_path(@tarefa), class: "mr-2 text-blue-500 hover:text-blue-700" %>
  <%= link_to "Voltar para Tarefas", tarefas_path, class: "mr-2 text-blue-500 hover:text-blue-700" %>
  <%= button_to "Apagar Tarefa", @tarefa, method: :delete, data: { confirm: 'Tem certeza que deseja cancelar?' }, class: "text-red-500 hover:text-red-700" %>
</div>
