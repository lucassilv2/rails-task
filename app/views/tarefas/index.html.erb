<p class="text-green-500 mb-4"><%= notice %></p>

<h1 class="text-2xl font-bold mb-4">Tarefas</h1>

<div id="tarefas">
  <% @tarefas.each do |tarefa| %>
    <%= render tarefa %>
    <p class="mt-2">
      <%= link_to "Mostrar Tarefa", tarefa, class: "text-blue-500 hover:text-blue-700" %>
    </p>
  <% end %>
</div>

<%= link_to "Nova Tarefa", new_tarefa_path, class: "text-blue-500 hover:text-blue-700 mt-4 block" %>
